@page
@model Event_application.Pages.SignupTest1Model


@{


    <div id="container_1">
  
  <h1 id="title">
  Registrer deltager
</h1>
<p id="description">
  Indtast dine oplysninger:
</p>
  
</div>
<div id="container_2">
  
  <form id="survey-form">
    <label id="name-label">Navn</label>
      <input type="text" id="name" name="name" class="form" required placeholder="Indtast navn"><br>
    <label id="email-label">Email</label>
      <input type="email" id="email" name="email" class="form" required placeholder="Indtast din email"><br>
    <label id="number-label">Alder</label>
      <input type="number" id="number" name="number" class="form" placeholder="Alder" min=18 max=60 required><br>
     
       
  
   
    <label>
      <input type="radio" name="genre" value="Male">Mand
    </label>
    <label>
      <input type="radio" name="genre" value="Female">Kvinde
    </label>
    <label>
      <input type="radio" name="genre" value="Other">Andet
    </label>
    
    
    
    <input type="submit" id="submit" name="submit" value="Tilmeld">
  </form>
</div>
}
